    "dev": "ts-node-dev --transpile-only --no-notify api/index.ts",
    "generate": "ts-node-dev api/schema.ts",
    "start": "node dist/app.js",
    "check-types": "tsc --noemit",
    "lint": "yarn run check-types && eslint --cache --fix"

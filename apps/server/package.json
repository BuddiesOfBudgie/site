    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "nexus": "^1.3.0",
    "semver": "^7.5.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/semver": "^7.5.0",
    "esbuild": "^0.17.19",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.0.4"
  }
